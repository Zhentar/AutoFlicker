<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>PowerSwitch</defName>
    <label>power switch</label>
    <thingClass>Building_PowerSwitch</thingClass>
    <category>Building</category>
    <description>Switches power on/off.</description>
    <graphicData>
      <texPath>Things/Building/Power/PowerSwitch_On</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <building>
      <ignoreNeedsPower>true</ignoreNeedsPower>
      <allowWireConnection>false</allowWireConnection>
    </building>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>200</WorkToMake>
      <Flammability>0.4</Flammability>
      <Beauty>-2</Beauty>
    </statBases>
    <placingDraggableDimensions>0</placingDraggableDimensions>
    <costList>
      <Steel>15</Steel>
      <Component>1</Component>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="AutoFlicker.CompProperties_AutoFlicker"/>
    </comps>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <tickerType>Normal</tickerType>
    <designationCategory>Power</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef Abstract="True" Name="LampBase" ParentName="BuildingBase">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>8</pathCost>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <designationCategory>Furniture</designationCategory>
    <rotatable>false</rotatable>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>170</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="LampBase">
    <defName>SunLamp</defName>
    <label>sun lamp</label>
    <description>Lights an area brightly enough to grow crops, but consumes a huge amount of power.</description>
    <thingClass>Building_SunLamp</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/LampSun</texPath>
    </graphicData>
    <blockWind>true</blockWind>
    <statBases>
      <WorkToMake>330</WorkToMake>
    </statBases>
    <costList>
      <Steel>25</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Glower">
        <overlightRadius>7.0</overlightRadius>
        <glowRadius>14</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>1600</basePowerConsumption>
      </li>
      <li Class="AutoFlicker.CompProperties_AutoFlicker"/>
    </comps>
    <!-- Determined by trial and error
    This value isn't perfect because these radii use different algorithms
    but it matches in this case-->
    <specialDisplayRadius>5.8</specialDisplayRadius>
    <tickerType>Normal</tickerType>
  </ThingDef>
  
</Buildings>